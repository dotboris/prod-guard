{
  "extends": ["@tsconfig/recommended/tsconfig.json"],
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "lib": ["DOM", "ES2022"],
    "strict": true,
    "jsx": "react-jsx"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.js",
    "./src/**/*.jsx"
  ]
}
