{
  "extends": ["@tsconfig/recommended/tsconfig.json"],
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "lib": ["DOM", "ES2022"],
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react"
  },
  "include": [
    "./vitest.config.ts",
    "./eslint.config.js",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.js",
    "./src/**/*.jsx",
    "./playwright.config.ts",
    "./e2e/**/*.ts"
  ]
}
