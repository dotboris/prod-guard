    "@types/lodash-es": "^4.17.12",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@types/uuid": "^10.0.0",
    "@types/webextension-polyfill": "^0.12.1",
    "babel-loader": "^9.2.1",
    "copy-webpack-plugin": "^12.0.2",
