{
  "name": "prod-guard",
  "version": "1.3.1",
  "private": true,
  "scripts": {
    "start": "web-ext run -s dist --verbose",
    "build": "webpack",
    "build:watch": "webpack --watch",
    "build:prod": "cross-env NODE_ENV=production webpack",
    "changeset": "changeset",
    "package": "web-ext build -s dist -o",
    "lint": "run-p 'lint:**' 'format:check'",
    "lint:js": "eslint . --ext .js --ext .jsx --ext .ts --ext .tsx",
    "lint:css": "stylelint 'src/**/*.scss'",
    "lint:web-ext": "web-ext lint -s dist",
    "lint:typecheck": "tsc --noEmit",
    "test": "jest",
    "format": "prettier --write '**/*.{ts,tsx,js,jsx,json,scss}'",
    "format:check": "prettier --check '**/*.{ts,tsx,js,jsx,json,scss}'",
    "prepare": "husky install"
  },
  "packageManager": "pnpm@8.8.0",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.23.0",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@emotion/babel-plugin": "^11.11.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@tsconfig/recommended": "^1.0.3",
    "@types/jest": "^29.5.5",
    "@types/lodash-es": "^4.17.9",
    "@types/react": "^18.2.23",
    "@types/react-dom": "^18.2.8",
    "@types/uuid": "^9.0.4",
    "@types/webextension-polyfill": "^0.10.4",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-jsx": "^11.0.0",
    "eslint-config-standard-with-typescript": "^39.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.4.2",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^14.0.1",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.0.3",
    "sass": "^1.68.0",
    "sass-loader": "^13.3.2",
    "sharp": "^0.32.6",
    "style-loader": "^3.3.3",
    "stylelint": "^15.10.3",
    "stylelint-config-standard-scss": "^11.0.0",
    "typescript": "^5.2.2",
    "web-ext": "^7.8.0",
    "webpack": "^5.88.2",
    "webpack-clean-plugin": "^0.2.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@fortawesome/fontawesome-free": "^6.4.2",
