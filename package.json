    "@emotion/babel-plugin": "^11.13.5",
    "@eslint/js": "^9.18.0",
    "@playwright/test": "^1.49.1",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.0",
    "@tsconfig/recommended": "^1.0.8",
    "@types/eslint-config-prettier": "^6.11.3",
