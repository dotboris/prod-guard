    "react-dom": "^18.2.0",
    "react-hook-form": "^7.46.2",
    "react-query": "^3.39.3",
    "react-router": "^6.16.0",
    "react-router-dom": "^6.16.0",
    "react-use": "^17.4.0",
    "uuid": "^9.0.1",
    "webextension-polyfill": "^0.10.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,scss}": [
      "prettier --write"
    ]
  }
}
