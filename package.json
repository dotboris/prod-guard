{
  "name": "prod-guard",
  "version": "1.3.1",
  "private": true,
  "scripts": {
    "start": "web-ext run -s dist --verbose",
    "build": "webpack",
    "build:watch": "webpack --watch",
    "build:prod": "cross-env NODE_ENV=production webpack",
    "package": "web-ext build -s dist -o",
    "lint": "run-p 'lint:**' 'format:check'",
    "lint:js": "eslint . --ext .js --ext .jsx --ext .ts --ext .tsx",
    "lint:css": "stylelint 'src/**/*.scss'",
    "lint:web-ext": "web-ext lint -s dist",
    "lint:typecheck": "tsc --noEmit",
    "test": "jest",
    "format": "prettier --write '**/*.{ts,tsx,js,jsx,json,scss}'",
    "format:check": "prettier --check '**/*.{ts,tsx,js,jsx,json,scss}'",
    "prepare": "husky install"
  },
  "packageManager": "pnpm@8.1.0",
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.4",
    "@tsconfig/recommended": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^9.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-jsx": "^11.0.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.3",
    "jest": "^29.0.0",
    "lint-staged": "^13.2.0",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-loader": "^7.0.1",
    "prettier": "^2.8.4",
    "sass": "^1.53.0",
    "sass-loader": "^13.0.2",
    "sharp": "^0.32.0",
    "style-loader": "^3.3.1",
    "stylelint": "^15.0.0",
    "stylelint-config-standard-scss": "^7.0.0",
    "typescript": "^5.0.0",
    "web-ext": "^7.1.1",
    "webpack": "^5.73.0",
    "webpack-clean-plugin": "^0.2.3",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.1.1",
    "raf-throttle": "^2.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.2",
    "react-router": "^6.3.0",
    "react-router-dom": "^6.3.0",
    "uuid": "^9.0.0",
    "webextension-polyfill": "^0.10.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,scss}": [
      "prettier --write"
    ]
  }
}
